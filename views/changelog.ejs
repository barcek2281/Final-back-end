<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Changelog</title>
    <link rel="stylesheet" href="/public/style.css">
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">
                <a href="/"><img src="/public/images/logo.png" alt="GameMoon Logo"></a>
                <a href="/">GameMoon</a>
            </div>
            <div class="nav-links">
                <a href="/about">About</a>
                <a href="/changelog">Changelog</a>
                <a href="/download">Download</a>
                <a href="/index">News</a>
    
                <% if (user) { %>
                    <a href="/users/profile">Profile</a>
                    <a href="/auth/logout">Logout</a>
                <% } else { %>
                    <a href="/auth/login">Login</a>
                    <a href="/auth/register">Register</a>
                <% } %>
            </div>
        </nav>
    </header>
    
    <main class="content">
        <div class="changelog-container">
            <h1>Changelog</h1>
            
            <% updates.forEach(update => { %>
                <div class="update">
                    <h2><%= update.title %></h2>
                    <p><%= update.description %></p>
                    <small><%= update.date %></small>
                </div>
            <% }) %>
        
            <h2>Comments</h2>
        
            <form action="/changelog/comment" method="POST">
                <textarea name="comment" required placeholder="Write your comment..."></textarea>
                <button type="submit">Post Comment</button>
            </form>
        
            <% comments.forEach(comment => { %>
                <div class="comment">
                    <strong><%= comment.author || "Anonim" %>:</strong>
                    <p><%= comment.text %></p>
                    <small><%= comment.date %></small>
                </div>
            <% }) %>
        </div>
    </main>
    
    <footer>
        <p>Â© 2025 GameMoon. All rights reserved.</p>
    </footer>
</body>
</html>
