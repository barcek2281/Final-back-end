<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Post</title>
    <link rel="stylesheet" href="/public/style.css">
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">
                <a href="/"><img src="/public/images/logo.png" alt="GameMoon Logo"></a>
                <a href="/">GameMoon</a>
            </div>
            <div class="nav-links">
                <a href="/about">About</a>
                <a href="/download">Download</a>
                <a href="/index">News</a>
    
                <% if (user) { %>
                    <a href="/users/profile">Profile</a>
                    <a href="/auth/logout">Logout</a>
                <% } else { %>
                    <a href="/auth/login">Login</a>
                    <a href="/auth/register">Register</a>
                <% } %>
            </div>
        </nav>
    </header>

    <div class="create-container">
        <div class="create-content">
            <h1>Create a New Post</h1>

            <% if (error) { %>
                <div class="error-message">
                    <p><%= error %></p>
                </div>
            <% } %>

            <form action="/admin/" method="POST">
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" required>

                <label for="content">Description:</label>
                <textarea name="content" id="content" required></textarea>

                <label>Author: <%= user ? user.login : 'Anonym' %></label>
                <button type="submit">Publish</button>
            </form>

            <a href="/">Go Back</a>
        </div>
    </div>

    <div class="posts-container">
        <h2>All Posts</h2>

        <% if (posts && posts.length > 0) { %>
            <ul class="post-list">
                <% posts.forEach(post => { %>
                    <li class="post-item">
                        <h3><a href="/admin/<%= post._id %>"><%= post.title %></a></h3>
                        <p><%= post.content %></p>
                        <small>Author: <%= post.author ? post.author.login : 'Anonym' %> | Date: <%= post.createdAt.toLocaleString() %></small>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No posts...</p>
        <% } %>
    </div>

    <footer>
        <p>Â© 2025 GameMoon. All rights reserved.</p>
    </footer>
</body>
</html>
