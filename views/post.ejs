<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.title %></title>
    <link rel="stylesheet" href="/public/style.css">
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">
                <a href="/"><img src="/public/images/logo.png" alt="GameMoon Logo"></a>
                <a href="/">GameMoon</a>
            </div>
            <div class="nav-links">
                <a href="/about">About</a>
                <a href="/download">Download</a>
                <a href="/index">News</a>
    
                <% if (user) { %>
                    <a href="/users/profile">Profile</a>
                    <a href="/auth/logout">Logout</a>
                <% } else { %>
                    <a href="/auth/login">Login</a>
                    <a href="/auth/register">Register</a>
                <% } %>
                
            </div>
        </nav>
    </header>

    <main class="post-container">
        <article class="post-detail">
            <h1 class="post-title"><%= post.title %></h1>
            <p class="post-content"><%= post.content %></p>
        </article>

        <!-- Display comments section -->
        <section class="comments-section">
            <h2>Comments</h2>

            <% if (comments && comments.length > 0) { %>
                <ul class="comments-list">
                    <% comments.forEach(function(comment) { %>
                        <li class="comment-item">
                            <p class="comment-author"><strong><%= comment.author %></strong></p>
                            <p class="comment-body"><%= comment.text %></p>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No comments yet. Be the first to comment!</p>
            <% } %>

            <!-- Add comment form (only if user is logged in) -->
            <% if (user) { %>
                <form action="/posts/<%= post._id %>/comment" method="POST">
                    <textarea name="text" placeholder="Add a comment" required></textarea>
                    <button type="submit">Post Comment</button>
                </form>
            <% } else { %>
                <p>Please <a href="/auth/login">log in</a> to add a comment.</p>
            <% } %>
        </section>
    </main>

    <footer class="footer">
        <p>Â© 2025 GameMoon. All rights reserved.</p>
    </footer>
</body>
</html>