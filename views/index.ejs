<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GameMoon</title>
    <link rel="stylesheet" href="/public/style.css">
    <link rel="icon" type="image/png" sizes="16x16" href="/public/favicon/favicon-16x16.png">
    <link rel="manifest" href="/public/favicon/site.webmanifest">
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">
                <a href="/"><img src="/public/images/logo.png" alt="GameMoon Logo"></a>
                <a href="/">GameMoon</a>
            </div>
            <div class="nav-links">
                <a href="/about">About</a>
                <a href="/changelog">Changelog</a>
                <a href="/download">Download</a>
                <a href="/index">News</a>
    
                <% if (user) { %>
                    <a href="/users/profile">Profile</a>
                    <a href="/auth/logout">Logout</a>
                <% } else { %>
                    <a href="/auth/login">Login</a>
                    <a href="/auth/register">Register</a>
                <% } %>
            </div>
        </nav>
    </header>
    

    
    <main>
        <section class="posts-container">
            <h1>Latest Game Posts</h1>
            <div class="posts-grid">
                <% if (posts.length > 0) { %>
                    <% posts.forEach(post => { %>
                        <div class="post-card">
                            <h2><%= post.title %></h2>
                            <p><%= post.content.substring(0, 150) %>...</p>
                            <a href="/posts/<%= post._id %>" class="read-more">Read More</a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No posts available yet.</p>
                <% } %>
            </div>
        </section>
    </main>

    
    <main>
        <div class="about-container">
            <div class="about-content">
                <section class="posts-container">
                    <h1>Latest Game Posts</h1>
                    <div class="posts-grid">
                        <% if (posts.length > 0) { %>
                            <% posts.forEach(post => { %>
                                <div class="post-card">
                                    <h2><%= post.title %></h2>
                                    <p><%= post.content.substring(0, 150) %>...</p>
                                    <a href="/posts/<%= post._id %>" class="read-more">Read More</a>
            
                                    <!-- Comments Section Inside Each Post -->
                                    <h3>Comments</h3>
                                    <form action="/posts/<%= post._id %>/comment" method="POST">
                                        <textarea name="comment" required placeholder="Write your comment..."></textarea>
                                        <button type="submit">Post Comment</button>
                                    </form>
                                    
                                    <% if (post.comments && post.comments.length > 0) { %>
                                        <% post.comments.forEach(comment => { %>
                                            <div class="comment">
                                                <strong><%= comment.author || "Anonim" %>:</strong>
                                                <p><%= comment.text %></p>
                                                <small><%= comment.date %></small>
                                            </div>
                                        <% }) %>
                                    <% } else { %>
                                        <p>No comments yet.</p>
                                    <% } %>
            
                                </div> <!-- End of post-card -->
                            <% }) %>
                        <% } else { %>
                            <p>No posts available yet.</p>
                        <% } %>
                    </div>
                </section>
            </div>
        </div>
    </main>
    
    <footer>
        <p>Â© 2025 GameMoon. All rights reserved.</p>
    </footer>
    
</body>
</html>
